<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
	<script file="WHDB.lua"/>
	<script file="zoneData.lua"/>
	<script file="itemData.lua"/>
	<script file="npcData.lua"/>
	<script file="objData.lua"/>
	<script file="qData.lua"/>
	<Font name="RQP_Font" font="Fonts\FRIZQT__.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="11"/>
		</FontHeight>
	</Font>
	<Frame name="WHDB_Frame" parent="UIParent" movable="true" toplevel="true" enableMouse="true" frameStrata="LOW" hidden="true">
		<Size>
			<AbsDimension x="256" y="256"/>
		</Size>
		
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		
		<Scripts>
			<OnLoad>
				WHDB_Init();
			</OnLoad>
			<OnEvent>
				WHDB_Event(event);
			</OnEvent>
			<OnShow>
				
			</OnShow>
			<OnMouseDown>
				WHDB_OnMouseDown(arg1);
			</OnMouseDown>
			<OnMouseUp>
				WHDB_OnMouseUp(arg1);
			</OnMouseUp>
			<OnShow>
				WHDB_OnFrameShow();
			</OnShow>
		</Scripts>
		
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
           edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
		</Backdrop>
		
		<Layers>
			<Layer>
				<FontString name="MapButtons" inherits="RQP_Font" text="Mapping">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="12" y="-12"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="Settings" inherits="RQP_Font" text="Settings:">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="MapButtons" relativePoint="TOPLEFT">
							<Offset x="0" y="-58"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="SetWP" inherits="RQP_Font" text="Show Waypoints">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="Settings" relativePoint="BOTTOMLEFT">
							<Offset x="10" y="-2"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="SetAP" inherits="RQP_Font" text="Auto Plot Notes">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="SetWP" relativePoint="BOTTOMLEFT">
							<Offset x="0" y="-2"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="SetUP" inherits="RQP_Font" text="Update Auto Plotted Notes">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="SetAP" relativePoint="BOTTOMLEFT">
							<Offset x="8" y="-2"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="SetSO" inherits="RQP_Font" text="Merge Overlaying Notes (may be slow)">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="SetUP" relativePoint="BOTTOMLEFT">
							<Offset x="-8" y="-2"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<Button name="CleanMap" inherits="OptionsButtonTemplate" text="Clean Map">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="MapButtons" relativePoint="BOTTOMLEFT">
						<Offset x="5" y="-2"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnClick> WHDB_DoCleanMap(); </OnClick>
				</Scripts>
			</Button>
			<Button name="PlotAll" inherits="OptionsButtonTemplate" text="Show All">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="CleanMap" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="-2"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnClick> 
						WHDB_PlotAllQuests();
						WorldMapFrame:Show();
					</OnClick>
				</Scripts>
			</Button>
			<CheckButton name="waypoints" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SetWP">
						<Offset x="-16" y="1"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnShow> 
						CheckSetting("waypoints");
					</OnShow>
					<OnClick> 
						SwitchSetting("waypoints");
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="commentNotes" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SetCN">
						<Offset x="-16" y="1"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnShow> 
						CheckSetting("commentNotes");
					</OnShow>
					<OnClick> 
						SwitchSetting("commentNotes");
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="auto_plot" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SetAP">
						<Offset x="-16" y="1"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnShow> 
						CheckSetting("auto_plot");
					</OnShow>
					<OnClick> 
						SwitchSetting("auto_plot");
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="updateNotes" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SetUP">
						<Offset x="-16" y="1"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnShow> 
						CheckSetting("updateNotes");
					</OnShow>
					<OnClick> 
						SwitchSetting("updateNotes");
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="sortOverlay" inherits="OptionsCheckButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SetSO">
						<Offset x="-16" y="1"/>
					</Anchor> 
				</Anchors>
				<Scripts>
					<OnShow> 
						CheckSetting("sortOverlay");
					</OnShow>
					<OnClick> 
						SwitchSetting("sortOverlay");
					</OnClick>
				</Scripts>
			</CheckButton>
		</Frames>
	</Frame>
</Ui>